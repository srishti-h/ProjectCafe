<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pink"
    android:padding="16dp">
    <!-- Back Button -->
    <TextView
        android:layout_width="204dp"
        android:layout_height="45dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/custom_edittext"
        android:gravity="center"
        android:text="Plain Muffin"
        android:textColor="@color/pink"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="226dp"
        android:layout_height="482dp"
        android:layout_marginTop="200dp"
        tools:srcCompat="@drawable/plainmuffin" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textColor="@color/pink"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/viewCartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:text="View Cart"
        android:textSize="16dp"
        android:drawableLeft="@drawable/view_cart"
        android:textColor="@color/pink" />

    <Button
        android:id="@+id/addToCartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="70dp"
        android:text="Add to Cart"
        android:drawableLeft="@drawable/add_to_cart"
        android:textColor="@color/pink" />

    <EditText
        android:id="@+id/quantityInput"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/addToCartButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="230dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/custom_edittext"
        android:hint="Quantity"
        android:padding="8dp" />

    <TextView
        android:layout_width="148dp"
        android:layout_height="447dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/custom_edittext"
        android:gravity="center"
        android:lineSpacingExtra="10dp"
        android:padding="10dp"
        android:text="The classic sweet pastry in a small cup shape. A a moist and tender classic with a subtly sweet flavor."
        android:textColor="@color/pink"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>
